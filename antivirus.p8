--variables

function _init()
  player={
    --position
    sp=1,
    x=0,
    y=218,
    w=7,
    h=8,
    flp=false,
    --movement
    dx=0,
    dy=0,
    max_dx=1.8,
    max_dy=3,
    acc=0.35,
    jump=3.5,
    --states
    anim=0,
    running=false,
    jumping=false,
    falling=false,
    sliding=false,
    landed=false,
    --items
    files=0,
    keys1=0,
    keys2=0
  }
  
  --physics
  gravity=0.3
  friction=0.85
  
  --camera
  cam_x=0
  cam_y=128
  
  --map limit
  map_start_x=0
  map_end_x=256
  map_start_y=0
  map_end_y=256
  
  --debug
  x1r=0	y1r=0
  x2r=0	y2r=0
  
  collide_l="no"
  collide_r="no"
  collide_u="no"
  collide_d="no"
end
